# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Start.index
GET     /dashboard                              Dashboard.index
GET     /station/{id}                           Station.index
GET     /about                                  About.index
GET     /dashboard/deletestation/{id}           Dashboard.deleteStation
GET     /station/{stationid}/deletereading/{id} Station.deleteReading

POST    /dashboard/addstation                   Dashboard.addStation
POST    /station/{id}/addreading                Station.addReading

GET     /signup                                 Accounts.signup
GET     /login                                  Accounts.login
POST    /register                               Accounts.register
POST    /authenticate                           Accounts.authenticate

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
